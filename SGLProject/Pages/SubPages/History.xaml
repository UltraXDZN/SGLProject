<UserControl x:Class="SGLProject.Pages.SubPages.History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGLProject.Pages.SubPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock
            FontSize="15"
            Foreground="{StaticResource InactiveFontBrush}"
            TextAlignment="Center">
            <Run Text="Trenutno niste prijavljeni."/>
            <Hyperlink
                Foreground="{StaticResource CaptionFontBrush}"
                TextDecorations="None"
                Click="Hyperlink_Click">Prijavi se</Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
